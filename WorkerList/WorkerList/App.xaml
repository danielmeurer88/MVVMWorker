<Application x:Class="WorkerList.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WorkerList"
             xmlns:localvm="clr-namespace:WorkerList.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <localvm:WorkerViewModel x:Key="workerViewModel"/>
        <localvm:AddWorkerViewModel x:Key="addWorkerViewModel"/>
        <ResourceDictionary x:Key="allDictionaries">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StylesDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
